<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.genius.multiprogressbar.MultiProgressBar
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_alignParentTop="true"
        android:id="@+id/mpb_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:progressLineColor="@color/warm_grey"
        app:progressColor="@color/black"
        android:layout_marginTop="5dp"
        app:progressSingleDisplayedTime="5.0" />
<!--        app:progressSteps="9"-->


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mpb_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="90"
        app:layout_constraintTop_toBottomOf="@+id/mpb_main">

        <View
            android:id="@+id/left"
            android:layout_weight="45"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            />

        <View
            android:id="@+id/right"
            android:layout_weight="45"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>