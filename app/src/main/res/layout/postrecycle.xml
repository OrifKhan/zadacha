<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--vertical strok 1-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <!--horizoltal strok 1-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"

            android:weightSum="90">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgprofil"
                android:layout_width="50dp"
                android:layout_height="55dp"
                android:layout_weight="2"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img9"
                app:shapeAppearance="@style/shape_img"
                app:strokeColor="#FF0048"
                app:strokeWidth="2dp" />
            <!--vertical text title-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="80"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textUser2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Super_001_"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New year"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="normal" />
                <!--vertical text title-->
            </LinearLayout>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_weight="5"
                android:padding="8dp"
                android:src="@drawable/more" />
            <!--horizoltal strok 1-->
        </LinearLayout>
        <!--vertical strok 1-->
        <ImageView
            android:id="@+id/imgpost"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img10"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="50"
            android:background="@color/white">

            <ImageView
                android:id="@+id/like"
                android:layout_width="50dp"
                android:layout_height="55dp"
                android:padding="10dp"
                android:src="@drawable/like"
                android:layout_weight="1"
                app:itemIconTint="@drawable/like_selctor"
               />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="55dp"
                android:padding="10dp"
                android:src="@drawable/comment"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:padding="8dp"
                android:src="@drawable/share"
                android:layout_weight="1"/>
      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:layout_gravity="center"
          android:layout_weight="44">

      </RelativeLayout>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="55dp"
                android:padding="10dp"
                android:src="@drawable/bookmark"
                android:layout_weight="1"/>

        </LinearLayout>

     <!--liner laiked -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:weightSum="100">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20">


            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="32dp"
                android:layout_weight="2"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/person3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/shapeableImageView2"
                app:layout_constraintVertical_bias="0.0"
                app:shapeAppearance="@style/shape_img"
                app:strokeColor="#DAD5D6"
                app:strokeWidth="0.5dp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/shapeableImageView2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:layout_weight="2"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/person3"
                app:layout_constraintBottom_toBottomOf="@+id/shapeableImageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/shapeableImageView"
                app:layout_constraintVertical_bias="0.0"
                app:shapeAppearance="@style/shape_img"
                app:strokeColor="#DAD5D6"
                app:strokeWidth="0.5dp"
                tools:ignore="MissingConstraints" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/shapeableImageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="4dp"
                android:layout_weight="2"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/person1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearance="@style/shape_img"
                app:strokeColor="#DAD5D6"
                app:strokeWidth="0.5dp"
                tools:ignore="MissingConstraints" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_weight="80"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:text="Liked by ilam_bezz99 and 10 others"/>
    <!--liner laiked -->
     </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>